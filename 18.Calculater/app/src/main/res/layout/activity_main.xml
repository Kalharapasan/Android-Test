<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5"
    android:padding="16dp">

    <!-- Display Screen -->
    <TextView
        android:id="@+id/tvDisplay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#ffffff"
        android:elevation="2dp"
        android:gravity="end|center_vertical"
        android:padding="20dp"
        android:text="0"
        android:textColor="#000000"
        android:textSize="36sp"
        android:fontFamily="monospace"
        android:layout_marginBottom="16dp" />

    <!-- Button Grid -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:columnCount="4"
        android:rowCount="7">

        <!-- Row 1: Memory Functions -->
        <Button
            android:id="@+id/btnMC"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/button_memory"
            android:text="MC"
            android:textColor="#000000"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnMR"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/button_memory"
            android:text="MR"
            android:textColor="#000000"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnMPlus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/button_memory"
            android:text="M+"
            android:textColor="#000000"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnMMinus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/button_memory"
            android:text="M-"
            android:textColor="#000000"
            android:textSize="14sp" />

        <!-- Row 2: MS, M~, %, CE -->
        <Button
            android:id="@+id/btnMS"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/button_memory"
            android:text="MS"
            android:textColor="#000000"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnMTilde"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/button_memory"
            android:text="M~"
            android:textColor="#000000"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnPercent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/button_function"
            android:text="%"
            android:textColor="#000000"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnCE"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/button_function"
            android:text="CE"
            android:textColor="#000000"
            android:textSize="16sp" />

        <!-- Row 3: 1/x, x², ²√x, C -->
        <Button
            android:id="@+id/btnOneOverX"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/button_function"
            android:text="¹/x"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnSquare"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/button_function"
            android:text="x²"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnSqrt"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/button_function"
            android:text="²√x"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnC"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/button_function"
            android:text="C"
            android:textColor="#000000"
            android:textSize="18sp" />

        <!-- Row 4: 7, 8, 9, × -->
        <Button
            android:id="@+id/btn7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/button_number"
            android:text="7"
            android:textColor="#000000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/button_number"
            android:text="8"
            android:textColor="#000000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/button_number"
            android:text="9"
            android:textColor="#000000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnMultiply"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/button_operator"
            android:text="×"
            android:textColor="#000000"
            android:textSize="20sp" />

        <!-- Row 5: 4, 5, 6, - -->
        <Button
            android:id="@+id/btn4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/button_number"
            android:text="4"
            android:textColor="#000000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/button_number"
            android:text="5"
            android:textColor="#000000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/button_number"
            android:text="6"
            android:textColor="#000000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnMinus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/button_operator"
            android:text="−"
            android:textColor="#000000"
            android:textSize="20sp" />

        <!-- Row 6: 1, 2, 3, + -->
        <Button
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/button_number"
            android:text="1"
            android:textColor="#000000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/button_number"
            android:text="2"
            android:textColor="#000000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/button_number"
            android:text="3"
            android:textColor="#000000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnPlus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/button_operator"
            android:text="+"
            android:textColor="#000000"
            android:textSize="20sp" />

        <!-- Row 7: +/-, 0, ., = -->
        <Button
            android:id="@+id/btnPlusMinus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/button_function"
            android:text="+/−"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/button_number"
            android:text="0"
            android:textColor="#000000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnDot"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/button_number"
            android:text="."
            android:textColor="#000000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnEquals"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/button_equals"
            android:text="="
            android:textColor="#ffffff"
            android:textSize="20sp" />

    </GridLayout>

</LinearLayout>